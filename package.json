{
  "dependencies": {
    "autoprefixer": "^9.4.7",
    "hugo-cli": "^0.10.0",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.1"
  },
  "scripts": {
    "start": "hugo server -w && open http://localhost:1313",
    "dev": "rm -rf ./dev && hugo server -wDFd ./dev",
    "build": "rm -rf ./public && hugo -vm",
    "deploy": "npm run build && now",
    "release": "npm run deploy && now alias",
    "now-build": "hugo -d public"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
