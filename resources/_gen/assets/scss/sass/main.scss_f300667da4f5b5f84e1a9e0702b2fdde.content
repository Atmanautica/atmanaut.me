.scrolliner {
  position: sticky;
  top: 0;
  height: 6px;
  transition: opacity 400ms;
  width: calc(100% + 8em);
  transform: translate3d(calc(-100% - 4em), 0, 0);
  background-color: #0e2f49; }
  .scrolliner::after {
    content: "";
    height: 3px;
    display: block;
    width: 100%;
    background-color: #3386c1; }
  .scrolliner.ghost {
    opacity: 0;
    transition: none; }

